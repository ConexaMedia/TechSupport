<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:background="@color/bluedark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/tvHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aktivasi Internet Baru"
                    android:textColor="@color/white"
                    android:fontFamily="@font/coolvetica_reguler"
                    android:textSize="20sp"
                    android:layout_marginTop="42dp"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardBackgroundColor="@color/floating"
                android:layout_marginHorizontal="24dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_width="8dp"
                            android:layout_height="120dp"
                            android:background="@color/bluedark"
                            android:layout_marginStart="14dp"
                            android:layout_marginVertical="18dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginVertical="14dp"
                        android:layout_marginStart="18dp">
                        <TextView
                            android:id="@+id/tvJudul"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Informasi Client"
                            android:textSize="20sp"
                            android:fontFamily="@font/coolvetica_reguler"
                            android:textColor="@color/bluedark"/>
                        <TextView
                            android:id="@+id/tvNamaPelanggan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nama Pelanggan : "
                            android:textColor="@color/bluedark"
                            android:fontFamily="@font/poppins"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/tvKontak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kontak : "
                            android:textColor="@color/bluedark"
                            android:fontFamily="@font/poppins"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/tvAlamat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alamat : "
                            android:textColor="@color/bluedark"
                            android:fontFamily="@font/poppins"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/tvTanggal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tanggal Tugas : "
                            android:textColor="@color/orange"
                            android:fontFamily="@font/poppins"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/tvStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status Internet : "
                            android:textColor="@color/orange"
                            android:fontFamily="@font/poppins"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="18dp"
                android:gravity="center_horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnHubungi"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginEnd="6dp"
                    app:cardBackgroundColor="@color/floating">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/whatsapp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hubungi Client"
                            android:fontFamily="@font/coolvetica_reguler"
                            android:textColor="@color/bluedark"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnMaps"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginStart="6dp"
                    app:cardBackgroundColor="@color/floating">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/gmaps"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Koordinat Client"
                            android:fontFamily="@font/coolvetica_reguler"
                            android:textColor="@color/bluedark"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="24dp"
                    app:cardBackgroundColor="@color/floating"
                    app:cardCornerRadius="12dp"
                    android:elevation="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deskripsi Pekerjaan"
                            android:fontFamily="@font/coolvetica_reguler"
                            android:textColor="@color/orange"
                            android:textSize="16dp"/>
                        <TextView
                            android:id="@+id/tvDeskripsi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Instalasi dan Aktivasi Internet pelanggan baru paket Bronze CONEXA 10Mbps"
                            android:fontFamily="@font/poppins"
                            android:textSize="12dp"
                            android:textColor="@color/bluedark"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="24dp"
                    app:cardBackgroundColor="@color/floating"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="8dp"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginVertical="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CHECK LIST PEKERJAAN"
                                android:fontFamily="@font/coolvetica_reguler"
                                android:textSize="18dp"
                                android:textColor="@color/bluedark"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            android:layout_marginHorizontal="20dp">
                            <TextView
                                android:id="@+id/list1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Penarikan Kabel"
                                android:fontFamily="@font/coolvetica_reguler"
                                android:textSize="14dp"
                                android:textColor="@color/bluedark"/>
                            <CheckBox
                                android:id="@+id/cek1"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:buttonTint="@color/bluedark"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp"
                            android:layout_marginHorizontal="20dp">
                            <TextView
                                android:id="@+id/list2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Instalasi ONU"
                                android:fontFamily="@font/coolvetica_reguler"
                                android:textSize="14dp"
                                android:textColor="@color/bluedark"/>
                            <CheckBox
                                android:id="@+id/cek2"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:buttonTint="@color/bluedark"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp"
                            android:layout_marginHorizontal="20dp">
                            <TextView
                                android:id="@+id/list3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Registrasi Di OLT"
                                android:fontFamily="@font/coolvetica_reguler"
                                android:textSize="14dp"
                                android:textColor="@color/bluedark"/>
                            <CheckBox
                                android:id="@+id/cek3"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:buttonTint="@color/bluedark"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp"
                            android:layout_marginHorizontal="20dp">
                            <TextView
                                android:id="@+id/list4"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Uji Koneksi"
                                android:fontFamily="@font/coolvetica_reguler"
                                android:textSize="14dp"
                                android:textColor="@color/bluedark"/>
                            <CheckBox
                                android:id="@+id/cek4"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:buttonTint="@color/bluedark"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp"
                            android:layout_marginHorizontal="20dp">
                            <TextView
                                android:id="@+id/list5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Konfirmasi Dengan Client"
                                android:fontFamily="@font/coolvetica_reguler"
                                android:textSize="14dp"
                                android:textColor="@color/bluedark"/>
                            <CheckBox
                                android:id="@+id/cek5"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:buttonTint="@color/bluedark"/>
                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/CustomTextInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginHorizontal="20dp"
                            app:boxStrokeColor="@color/orange"
                            android:hint="Catatan Pekerjaan"
                            app:hintTextColor="@color/bluedark"
                            app:endIconMode="clear_text"
                            app:endIconTint="@color/bluedark">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/catatanAktivasi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:lines="4"
                                android:maxLines="6"
                                android:minLines="4"
                                android:textColor="@color/bluedark"
                                android:textColorHint="@color/bluedark"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_selesai"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/coolvetica_reguler"
                            android:text="Pekerjaan Selesai"
                            android:textSize="14sp"
                            android:backgroundTint="@color/orange"
                            app:cornerRadius="12dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>