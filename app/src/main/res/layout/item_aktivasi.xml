<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/cardTask"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:layout_marginVertical="8dp"
    android:elevation="8dp"
    android:layout_marginHorizontal="24dp"
    app:cardBackgroundColor="@color/floating">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!--garis vertikal -->
                    <View
                        android:layout_width="8dp"
                        android:layout_height="110dp"
                        android:background="@color/bluedark"
                        android:layout_marginVertical="14dp"
                        android:layout_marginStart="20dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="14dp"
                    android:layout_marginVertical="18dp">
                    <TextView
                        android:id="@+id/tvJudul"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aktivasi Internet Baru"
                        android:fontFamily="@font/coolvetica_reguler"
                        android:textColor="@color/bluedark"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/tvNamaPelanggan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Pelanggan : Yusuf Septiana"
                        android:fontFamily="@font/poppins"
                        android:textSize="10sp"
                        android:textColor="@color/bluedark"/>
                    <TextView
                        android:id="@+id/tvKontak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kontak : 082142315421"
                        android:fontFamily="@font/poppins"
                        android:textSize="10sp"
                        android:textColor="@color/bluedark"/>
                    <TextView
                        android:id="@+id/tvPaket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paket : 5 Mbps"
                        android:fontFamily="@font/poppins"
                        android:textSize="10sp"
                        android:textColor="@color/bluedark"/>
                    <TextView
                        android:id="@+id/tvTanggal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jadwal Pemasangan : 19/01/2025"
                        android:fontFamily="@font/poppins"
                        android:textSize="10sp"
                        android:textColor="@color/bluedark"/>
                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status : Disconnect"
                        android:fontFamily="@font/poppins"
                        android:textSize="10sp"
                        android:textColor="@color/orange"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="100dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/arrow2"/>
                </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>