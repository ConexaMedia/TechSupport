<?xml version="1.0" encoding="utf-8"?>
<!-- res/values/styles.xml -->
<resources>
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/bluedark</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/bluedark</item>
        <item name="helperTextTextColor">@color/bluedark</item>
        <item name="android:textColorHint">@color/bluedark</item>
    </style>

    <style name="btn_orange" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/orange</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CustomDatePicker" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/bluedark</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="ThemeOverlay_App_DatePicker" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="materialCalendarStyle">@style/Widget.App.MaterialCalendar</item>
    </style>

    <style name="Widget.App.MaterialCalendar" parent="Widget.Material3.MaterialCalendar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:calendarTextColor">@color/bluedark</item>
    </style>

</resources>
